@model CMCSDocument


@{
    ViewData["Title"] = "ViewDocument";
}

<div align="center">
    <br />
    <h2 style="background-color: white; width: fit-content">View Document</h2>
    <br />
 

    @switch(Model.Type)
    {
        case "PDF":
            <button class="button-class button-class-wide2" onclick="window.location = '/UserAccount/UserAccount'">Return To Your Account</button>
            <br />
            <br />
            <iframe class="document-viewer-class" src="data:application/pdf;base64,@Model.Content"></iframe>
            break;

        case "XLSX":
            <button class="button-class button-class-wide2" onclick="window.location = '/UserAccount/UserAccount'">Return To Your Account</button>
            <br />
            <br />
            <object class="document-viewer-class" type="application/msexcel" data="data:application/msexcel;base64,@Model.Content"></object>
            break;

        case "PNG":
            <button class="button-class button-class-wide2" onclick="window.location = '/UserAccount/UserAccount'">Return To Your Account</button>
            <br />
            <br />
            <img class="document-viewer-class document-viewer-class2" src="data:image/png;base64,@Model.Content" />
            break;

        case "JPG":
            <button class="button-class button-class-wide2" onclick="window.location = '/UserAccount/UserAccount'">Return To Your Account</button>
            <br />
            <br />
            <img class="document-viewer-class document-viewer-class2" src="data:image/jpeg;base64,@Model.Content" />
            break;

        default:
            <div align="center" style="width: 500px; background-color: white; border-color: rgb(35, 35, 35); border-style: solid; border-width: 2px">
                <div style="height: 1rem"></div>

                <b style="color: darkred">This document type is not supported for viewing.</b>

                <div style="height: 1rem"></div>
            </div>
            <br />
            <button class="button-class button-class-wide2" onclick="window.location = '/UserAccount/UserAccount'">Return To Your Account</button>
            break;
    }
    <br />
</div>

